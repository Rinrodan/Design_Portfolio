---
import Modal from './Modal.astro';

interface Props { 
    tileTitle: string;
    tileImage: string;
    modalTitle: string;
    modalContent: string;
}

const { tileTitle, tileImage, modalTitle, modalContent} = Astro.props;

---
<div class="flex flex-col justify-between max-sm: h-3/12 w-8/12 md:w-5/12 m-2 md:max-3xl:justify-center text-xs sm:max-md:text-sm">
        <button 
        data-modal-toggle="small-modal" 
        class="block 
            w-full md:w-auto text-white
            bg-white hover:bg-blue-800 
            focus:ring-4 focus:outline-none
            focus:ring-blue-300 font-medium 
            rounded-lg text-sm
            text-center dark:bg-blue-600 
            dark:hover:bg-blue-700
            dark:focus:ring-blue-800 " 
        type="button">
            <img class="block w-20 h-20 overflow-hidden object-scale bg-white m-auto rounded-t-md" 
            src={tileImage} />
            <p class="block bg-black w-full h-auto m-auto rounded-b-md ">{tileTitle}</p>
        </button>
    <!-- ==========================VVVVVVVVVVVVVVVV modal -->
        <div id="small-modal" tabindex="-1" class="dialog fixed top-0 left-0 right-0 z-50 hidden w-full p-4 overflow-x-hidden overflow-y-auto md:inset-0 h-[calc(100%-1rem)] max-h-full ">
        <div class="relative w-full max-w-md max-h-full " >
            <!-- Modal content -->
            <div class="relative bg-white rounded-lg shadow dark:bg-gray-700 ">
                <!-- Modal header -->
                <div class="flex flex-col items-center justify-between p-5 border-b rounded-t dark:border-gray-600 ">
                    <h3 class="flex text-left text-xl font-medium text-gray-900 dark:text-white bg-red-900">
                        {modalTitle}
                    </h3>
                    <h5 class="text-lg font-medium text-gray-900 dark:text-white">
                        {modalContent}
                    </h5>
                    <button type="button" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ml-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white" data-modal-hide="small-modal">
                        <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
                        </svg>
                        <span class="sr-only">
                            Close modal
                        </span> 
                    </button>
                </div>

            </div>
        </div>
    </div>
        <!-- ================================== ^^^^^^^^^^^^^^^^^^ modal -->
  
    
    <script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.8.0/flowbite.min.js">
    </script>
</div>

    <style>
    dialog {
        position: fixed;
        left: 50%;
        top: 50%;
        transform: t    nslate(-50%, -50%);
        width: 24rem              

    }
  </style>