<style>
    .contactButton {
        display:flex;
        width: 30%;
        max-width: 20rem;
        min-width: 5rem;
        margin: auto;
        background-color:rgba(33, 25, 56, 0.363);
        text-align: center;
        border-top: 2px solid rgba(255, 255, 255, 0.651);
        border-bottom: 2px solid rgba(255, 255, 255, 0.651);
        justify-content:center;
        transition-property: color, background-color, border-color, text-decoration-color, fill, stroke, opacity, box-shadow, transform, filter, backdrop-filter;
        
        transition: 150ms;
        transition-timing-function: ease;
    }
    @media (max-width: 640px) {
        .contactButton {
            width: 100%;  }}
    @media (min-width: 640px) {
        .contactButton {
            width: 25%;  
            border-top: 0px solid rgba(255, 255, 255, 0.651);
        border-bottom: 0px solid rgba(255, 255, 255, 0.651);
        border-left: 2px solid rgba(255, 255, 255, 0.651);
        border-right: 2px solid rgba(255, 255, 255, 0.651); }}
    .contactButton:hover {
        scale: 125%;
        font-weight: 700;
        background-color: rgba(0, 0, 0, 0.303);
        box-shadow: 4px 4px 20px black;
    }
</style>
