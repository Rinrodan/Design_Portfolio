---
interface Props {
	title: string;
	content: string;
	href: string;
    image: string
}

const { href, title, content, image } = Astro.props;
---

<div class="cardContainer flex flex-col w-full h-max m-auto">
    
    <a href="#" class="block">
        <img
          alt="Signage"
          src={image}
          class="h-56 w-full rounded-bl-3xl rounded-tr-3xl object-cover sm:h-64 lg:max-2xl:h-72"
        />
      
        <div class="mt-4 sm:flex sm:items-center sm:justify-center sm:gap-4 ">
          <div class="w-full">{title}</div>
      
          <span class="hidden sm:block sm:h-px sm:w-8 sm:bg-yellow-500"></span>
      
          <p class="mt-0.5 opacity-50 sm:mt-0 text-xs">Github</p>
        </div>
      </a>

</div>    